# Environment Variables Example for Luzi Afrika
# Copy this file to .env.local for local development

# Email Configuration
FROM_EMAIL=contact@your-domain.com
TO_EMAIL=info@your-domain.com

# Resend API (get your API key from https://resend.com)
RESEND_API_KEY=re_yourresendapikey

# Sanity CMS Configuration
SANITY_PROJECT_ID=your_sanity_project_id
SANITY_DATASET=production
SANITY_API_VERSION=2023-08-01
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production

# Development settings
NEXT_SKIP_TYPECHECK=1
NEXT_TELEMETRY_DISABLED=1
